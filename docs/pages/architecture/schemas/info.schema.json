{
  "$id": "https://schemas.cadman.dev/app-info.v1.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Cadman App Info (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "app_id", "name", "path", "status", "last_seen", "config"],
  "properties": {
    "schema_version": { "const": "1" },
    "app_id": { "$ref": "#/$defs/ulid" },
    "name": { "type": "string", "minLength": 1 },
    "path": { "type": "string", "minLength": 1 },
    "status": {
      "type": "string",
      "enum": ["active", "not_found", "deleted"]
    },
    "last_seen": { "$ref": "#/$defs/timestamp" },
    "config": {
      "type": "object",
      "additionalProperties": false,
      "required": ["resolved", "source_files"],
      "properties": {
        "resolved": {
          "type": "object",
          "additionalProperties": false,
          "required": ["containers"],
          "properties": {
            "containers": {
              "type": "object",
              "description": "Map of logical container keys to their resolved runtime config.",
              "minProperties": 1,
              "additionalProperties": { "$ref": "#/$defs/resolvedContainer" }
            },
            "ports": {
              "type": "array",
              "description": "Set of host ports reserved/assigned to this app.",
              "items": { "$ref": "#/$defs/port" },
              "uniqueItems": true
            },
            "caddy": { "$ref": "#/$defs/caddyResolved" }
          }
        },
        "source_files": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "minItems": 1
        }
      }
    }
  },
  "$defs": {
    "ulid": {
      "type": "string",
      "pattern": "^[0-7][0-9A-HJKMNP-TV-Z]{25}$"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "port": {
      "type": "integer",
      "minimum": 1,
      "maximum": 65535
    },
    "containerPortMap": {
      "type": "string",
      "description": "Optional IP, hostport:containerport (Podman-style). Examples: \"8000:80\", \"127.0.0.1:1081:80\"",
      "pattern": "^(?:\\d{1,3}(?:\\.\\d{1,3}){3}:)?\\d{1,5}:\\d{1,5}$"
    },
    "resolvedContainer": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "name", "detached", "ports"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "name": { "type": "string", "minLength": 1 },
        "image": { "type": "string" },
        "restart": { "type": "string" },
        "detached": { "type": "boolean" },
        "use_compose": { "type": "boolean" },
        "compose_file": { "type": "string" },
        "working_directory": { "type": "string" },
        "env_file": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "environment": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "ports": {
          "type": "array",
          "items": { "$ref": "#/$defs/containerPortMap" }
        },
        "volume": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "user": { "type": "string" },
        "group": { "type": "string" },
        "exec_start": { "type": "string" },
        "exec_stop": { "type": "string" },
        "after": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "requires": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        }
      }
    },
    "caddyResolved": {
      "type": "object",
      "additionalProperties": false,
      "required": ["routes"],
      "properties": {
        "email": { "type": "string" },
        "tls": {
          "oneOf": [
            { "type": "string", "enum": ["auto", "internal"] },
            { "type": "object" }
          ]
        },
        "routes": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["host", "proxy"],
            "properties": {
              "host": {
                "type": "array",
                "minItems": 1,
                "items": { "type": "string", "minLength": 1 }
              },
              "log": { "type": "string" },
              "proxy": { "type": "string", "minLength": 1 }
            }
          }
        }
      }
    }
  }
}

{
  "$id": "https://schemas.cadman.dev/app-status.v1.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Cadman App Status (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "app_id", "containers", "caddy"],
  "properties": {
    "schema_version": { "const": "1" },
    "app_id": { "$ref": "app-info.v1.json#/$defs/ulid" },
    "auto_reload": { "type": "boolean" },
    "containers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "state"],
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "restart": {
            "oneOf": [
              { "type": "boolean" },
              { "type": "string" }
            ]
          },
          "state": {
            "type": "string",
            "enum": ["running", "exited", "paused", "created", "dead", "unknown"]
          },
          "health": {
            "type": "string",
            "enum": ["healthy", "unhealthy", "starting", "none", "unknown"]
          },
          "since": { "$ref": "app-info.v1.json#/$defs/timestamp" }
        }
      }
    },
    "caddy": {
      "type": "object",
      "additionalProperties": false,
      "required": ["routes"],
      "properties": {
        "routes": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["host", "status"],
            "properties": {
              "host": {
                "type": "array",
                "minItems": 1,
                "items": { "type": "string", "minLength": 1 }
              },
              "status": {
                "type": "string",
                "enum": ["ok", "degraded", "fail", "unknown"]
              },
              "details": { "type": "string" }
            }
          }
        }
      }
    }
  }
}
